<div class="main">
  <div class="row vertical-double-inner">
    <h1 class="f-center">Hello <%= @staff_member.name %></h1>
  </div>
  <div class="row vertical-double-inner">
    Your Email Address on Record is <%= @staff_member.email %>
  </div>
  <div class="row vertical-double-inner">
    Your Phone Number on Record is <%= @staff_member.phone %>
  </div>
  You can edit your profile here 
  <%= button_to 'Edit', edit_staff_member_path(id: @staff_member.id), method: :get %>

  <div class="row vertical-double-inner">
    <h2> Here is your manager information </h2>
  </div>

  <div class="row vertical-inner">
    Manager Name: <%= @manager.name %>
  </div>

  <div class="row vertical-inner">
    Manager Email: <%= @manager.email %>
  </div>

  <div class="row vertical-inner">
    Manager Phone: <%= @manager.phone %>
  </div>
</div>